{
  "name": "risk-alert-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "实时风险预警平台 - Cloudflare 版本",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=risk_alert_db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name risk-alert-platform",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create risk_alert_db",
    "db:migrate:local": "wrangler d1 migrations apply risk_alert_db --local",
    "db:migrate:prod": "wrangler d1 migrations apply risk_alert_db",
    "db:console:local": "wrangler d1 execute risk_alert_db --local",
    "db:console:prod": "wrangler d1 execute risk_alert_db",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "dependencies": {
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
